//- Header
mixin menuLink(title,href = "#")
  li.header-menu-item 
    a.header-menu-link(href= href)= title 

mixin headerBottomItem(number, title)
  .header-bottom-item 
    span.header-bottom-number= number
    span.header-bottom-text= title
//- ====================

//- TITLE GLOBAL
mixin blockBox(caption,title,desc)
  .block-box
    h3.block-box-caption= caption 
    h2.block-box-heading= title 
    if desc 
      p.block-box-desc= desc 

mixin aboutItem(src,title,iconClass,alt = "")
  .about-item 
    img.about-image(src=src alt= alt) 
    .about-content
      i.about-icon(class = iconClass)
      span.about-title=title 
//- ====================

//- NUMBER
mixin numberItem(number,title)
  .number-item 
    h4.number-item-count= number
    span.number-item-text= title 

//-   SERVICE ITEM
mixin serviceItem(src,title,desc)
  .service-item 
    img.service-item-icon(src = src)
    .service-item-info 
      h3.service-item-title= title 
      p.service-item-desc= desc 
//- WE DO
mixin wedoItem(src,title,desc,active= "")
  .wedo-item(class= active)
    .wedo-item-header 
      img(src= src).wedo-item-icon
      h3.wedo-item-title= title 
      i.fal.fa-angle-down.wedo-item-arrow
    .wedo-item-content
      .wedo-item-text= desc

//- Team
mixin teamSocial(facebook = "#", social = "#", pinterest = "#", instagram = "#")
  ul.team-social 
    li.team-social-item
      a.team-social-link(href= facebook)
        i.fab.fa-facebook-f
    li.team-social-item
      a.team-social-link(href= social)
        i.fab.fa-twitter
    li.team-social-item
      a.team-social-link(href= pinterest)
        i.fab.fa-pinterest
    li.team-social-item
      a.team-social-link(href= instagram)
        i.fab.fa-instagram


mixin teamItem(src = "../images/img-team1.png",name ="Chridstopher Jonh",position= "Frontend")
  .team-item 
    .team-main 
      img(src= src).team-image
      .team-content 
        if block
          block
    .team-info  
      h3.team-name= name
      span.team-position= position
//- WORK
mixin workItem(src= "../images/img-work1.png",icon = "fa fa-home", title= "photography super", full ="", desc ="Lorem ipsum dolor sit amet, consectetu")
  .work-item(class= full)
    img.work-image(src= src)
    .work-content 
      i.work-icon(class= icon)
      h3.work-title= title
      span.work-desc.text= desc
